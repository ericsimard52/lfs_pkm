cat > bc/fix-libmath_h << "EOF"
#! /bin/bash
sed -e '1   s/^/{"/' \
    -e     's/$/",/' \
    -e '2,$ s/^/"/'  \
    -e   '$ d'       \
    -i libmath.h

sed -e '$ s/$/0}/' \
    -i libmath.h
EOF

CMD=( ln -sv /tools/lib/libncursesw.so.6 /usr/lib/libncursesw.so.6 )
processCmd
CMD=( ln -sfv libncurses.so.6 /usr/lib/libncurses.so )
processCmd
sed -i -e '/flex/s/as_fn_error/: ;; # &/' configure
return 0


